<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.classschedule.mapper.TeacherMapper">
    <resultMap id="default" type="com.example.classschedule.data.entity.TeacherEntity"/>

    <select id="getAll" resultMap="default">
        select *
        from teacher
        where deleted = 0
    </select>

    <select id="getById" resultType="com.example.classschedule.data.entity.TeacherEntity">
        select *
        from teacher
        where deleted = 0
            and id = #{id}
    </select>
</mapper>