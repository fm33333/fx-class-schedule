<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.classschedule.mapper.ClassHourMapper">
    <resultMap id="default" type="com.example.classschedule.data.entity.ClassHourEntity"/>

    <select id="getAll" resultMap="default">
        select *
        from class_hour
        where deleted = 0
    </select>

    <select id="getByWeekSchedule" resultType="com.example.classschedule.data.entity.ClassHourEntity">
        select *
        from class_hour
        where deleted = 0
            and week = #{weekNum}
            and class_number = #{scheduleNum}
    </select>
</mapper>